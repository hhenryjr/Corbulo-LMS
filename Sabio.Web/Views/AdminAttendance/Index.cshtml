@model Sabio.Web.Models.ViewModels.BaseViewModel

@{
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

@section styles{
    <link href="~/Sabio.CSS/DnD-List/DnD-List.css" rel="stylesheet" />
    <link href="~/content/angular-ui-tree.css" rel="stylesheet" />
    <link href="~/Sabio.CSS/simple.css" rel="stylesheet" />
}

@Html.Partial("Partials/_NgHeader")

<div class="row">
    <div class="col-md-12">
        <div class="block full">
            <div class="block-title" ng-controller="adminAttendanceTabsController as tabs">
                <div class="block-options pull-right">
                    <div class="btn-group">
                        <a href="javascript:void(0)" data-toggle="dropdown" class="btn btn-alt btn-sm btn-default dropdown-toggle" aria-expanded="false"><i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu dropdown-custom dropdown-menu-right">
                            <li>
                                <a href="javascript:void(0)">Action</a>
                                <a href="javascript:void(0)">Action 2</a>
                            </li>
                            <li class="divider"></li>
                            <li><a href="javascript:void(0)">ATTENDANCE TEST VIEW!!!</a></li>
                        </ul>
                    </div>
                </div>
                <ul data-toggle="tabs" class="nav nav-tabs">
                    <li ng-class="{'active': tabs.tabClass(tab)}" ng-repeat="tab in tabs.tabs">
                        <a href="{{tab.link}}" ng-click="tabs.setSelectedTab(tab)">{{tab.label}}</a>
                    </li>
                </ul>

            </div>
            <div ng-view></div>
        </div>
    </div>
</div>


